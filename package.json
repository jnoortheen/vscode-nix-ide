{
  "name": "nix-ide",
  "displayName": "Nix IDE",
  "description": "Nix language support with formatting and error report.",
  "version": "0.1.5",
  "publisher": "jnoortheen",
  "icon": "images/icon.png",
  "license": "MIT",
  "engines": {
    "vscode": "^1.47.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Snippets"
  ],
  "keywords": [
    "nix",
    "IDE"
  ],
  "bugs": {
    "url": "https://github.com/jnoortheen/vscode-nix-ide/issues"
  },
  "homepage": "https://github.com/jnoortheen/vscode-nix-ide",
  "repository": {
    "type": "git",
    "url": "https://github.com/jnoortheen/vscode-nix-ide"
  },
  "main": "dist/extension.js",
  "activationEvents": [
    "onLanguage:nix"
  ],
  "contributes": {
    "languages": [
      {
        "id": "nix",
        "aliases": [
          "Nix",
          "nix"
        ],
        "extensions": [
          ".nix"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "nix",
        "scopeName": "source.nix",
        "path": "./syntaxes/nix.tmLanguage.json"
      },
      {
        "scopeName": "markdown.nix.codeblock",
        "path": "./syntaxes/injection.json",
        "injectTo": [
          "text.html.markdown"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.nix": "nix"
        }
      }
    ],
    "snippets": [
      {
        "language": "nix",
        "path": "./snippets.json"
      }
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@commitlint/prompt-cli": "^11.0.0",
    "@types/node": "^14.14.13",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "husky": "^5.0.6",
    "js-yaml": "^3.14.0",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "standard-version": "^9.0",
    "typescript": "^4.1.3",
    "vsce": "^1.81.1",
    "vscode": "^1.1.25"
  },
  "scripts": {
    "prebuild": "js-yaml syntaxes/nix.YAML-tmLanguage > syntaxes/nix.tmLanguage.json && js-yaml syntaxes/injection.yml > syntaxes/injection.json",
    "build": "tsc -p ./",
    "watch": "yarn build --watch",
    "postinstall": "node ./node_modules/vscode/bin/install && husky install",
    "release": "standard-version && git push --follow-tags",
    "pkg-release": "vsce publish && ovsx publish --pat $OVS_PAT",
    "lint": "eslint --ext ts src"
  }
}
